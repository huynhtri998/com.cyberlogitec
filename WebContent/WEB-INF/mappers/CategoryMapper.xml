<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CategoryMapper">

	<resultMap id="Product" type="Product">
		<id column="id"  property="productId" />
		<result column="name" property="productName" />
		<result column="price" property="productPrice" />
		<result column="saleprice" property="productSalePrice" />
		<result column="imageURL" property="productImageURL" />
		<result column="categoryid"  property="categoryId" />
	</resultMap>
	
	<resultMap id="Category" type="Category">
		<id column="id"  property="categoryId" />
		<result column="name" property="categoryName" />
		<result column="code" property="categoryCode" />
	</resultMap>

	<resultMap id="CategoryProduct" type="ProductCategory">
		<id column="id" property="categoryId"/>
		<result column="name" property="categoryName" />
		<result column="code" property="categoryCode" />
		<collection resultMap="Product" property="product"/>
	</resultMap>
	
	<select id="getAll" parameterType="java.lang.String"
		resultMap="Category">
		SELECT id, name, code
		FROM category
	</select>
	
	
	<select id="getProductByCategoryId" parameterType="int"
		resultMap="CategoryProduct">
		select 
            * 
        from 
            category c
        inner join  
            product p
        on
            c.id = p.categoryid
        where c.id = #{categoryId}
	</select>
</mapper>